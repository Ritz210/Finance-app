<h1>My Portfolio</h1>

<div class='search-area'>
  <h3>Search Stocks</h3>
  <%= form_tag search_stock_path, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
          <%= fa_icon 'search 2x' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<%= render 'users/result' %>

<div class="row">
  <div class="col-9">
    <table class="table table-bordered hover">
  <thead>
    <tr>
      <th scope="col">Ticker</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tracked.each do |items| %>
      <tr>
        <th scope="row"><%= items.ticker %></th>
        <td><%= items.name %></td>
        <td><%= items.last_price %></td>
        <td align = "center">
        <%= link_to 'Remove', user_stocks_delete_path(id: items), method: :delete, class:"btn btn-sm btn-warning mr-1" %>
        <%= link_to 'Refresh', stocks_refresh_path(id:items), method: :post, class:"btn btn-sm btn-success ml-1" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>


