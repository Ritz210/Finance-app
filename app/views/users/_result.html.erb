<% if @stock %>
  <div class="card card-header result-port mb-2">
    <strong>Symbol:</strong> <%= @stock.ticker %>
    <strong>Name:</strong> <%= @stock.name %>
    <strong>Price:</strong> <%= @stock.last_price %>
    <% if current_user.can_track_more(@stock.ticker) %>
     <%= link_to 'Add to portfolio', user_stocks_path(ticker: @stock.ticker, user: current_user), class: "btn btn-xs btn-success", method: :get%>
    <% else %>
      <span class="badge badge-secondary">
        you are already tracking
        <% if !current_user.under_limit %>
          10 stocks
        <%end%>
        <% if current_user.is_stock_exists(@stock.ticker) %>
          
        <%end%>
      </span>
    <% end %>  
  </div>
<% end %>